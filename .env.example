# ===========================================
# RAG Knowledge Base System - Environment Configuration
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_kb
# For Docker: postgresql://postgres:postgres@db:5432/rag_kb

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# File Storage
UPLOAD_DIR=./uploads

# ===========================================
# LLM Provider API Keys
# ===========================================

# DeepSeek (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Qwen / Tongyi (https://dashscope.console.aliyun.com/)
QWEN_API_KEY=your-qwen-api-key
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus

# Zhipu AI (https://open.bigmodel.cn/)
ZHIPU_API_KEY=your-zhipu-api-key
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPU_CHAT_MODEL=glm-4-flash
ZHIPU_EMBEDDING_MODEL=embedding-3

# ===========================================
# Provider Configuration
# ===========================================

# Default chat provider: deepseek, qwen, zhipu
DEFAULT_CHAT_PROVIDER=deepseek

# Fallback chain (comma-separated)
CHAT_FALLBACK_CHAIN=deepseek,qwen,zhipu

# Embedding provider (fixed to zhipu)
EMBEDDING_PROVIDER=zhipu
EMBEDDING_DIMENSION=1024
